<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/head.ejs') %>
    </head>
    <body>
        <%- include('../../partials/header.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <div
                    class="col-lg-3 d-flex flex-column flex-shrink-0 p-3 bg-light border-end"
                    style="height: 100vh"
                >
                    <a
                        href="/view/point"
                        class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none"
                    >
                        <span class="fs-4">Tích điểm</span>
                    </a>
                    <hr />
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a
                                href="/view/point/get"
                                class="nav-link active"
                                id="nav-link-sidebar"
                                aria-current="page"
                            >
                                <i
                                    class="bi bi-house-door"
                                    style="font-size: 20px; margin-right: 5px"
                                ></i>
                                Cài đặt QRCode
                            </a>
                        </li>
                        <li>
                            <a
                                href="/view/gift/get"
                                class="nav-link text-dark"
                                id="nav-link-sidebar"
                            >
                                <i
                                    class="bi bi-gift"
                                    style="font-size: 20px; margin-right: 5px"
                                ></i>
                                Phần quà
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-9">
                    <form
                        class="mx-auto"
                        style="width: 90%"
                        method="post"
                        action="/view/point/edit/<%= stPoint._id %>?_method=PUT"
                    >
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="text-center my-4">Chỉnh sửa cài đặt số điểm</h3>
                            <a class="btn btn-warning" href="/view/point/get"
                                >Điểm đã cài</a
                            >
                        </div>
                        <div class="mb-3">
                            <label for="prefix-point" class="form-label"
                                >Tiền tố QRCode</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="prefix-point"
                                name="prefix"
                                value="<%= stPoint.prefix %> "
                                placeholder="AWACOxxxx"
                            />
                        </div>
                        <div class="mb-3">
                            <label for="prefix-point" class="form-label"
                                >QRCode cho người dùng</label
                            >
                            <select
                                class="form-select"
                                aria-label="Default select example"
                                name="type"
                            >
                                <option <% if (stPoint.type == "User") { %>
                                    selected
                                <% } %> value="User">User</option>
                                <option <% if (stPoint.type == "Dealer") { %>
                                    selected
                                <% } %>  value="Dealer">Dealer</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="number_point_user" class="form-label"
                                >Số điểm cộng cho người quét</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="number_point_user"
                                name="number_point_user"
                                value="<%= stPoint.number_point_user%> "
                            />
                        </div>
                        <div class="mb-3">
                            <label for="number_point_intro" class="form-label"
                                >Số điểm cộng cho người giới thiệu</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="number_point_intro"
                                name="number_point_intro"
                                value="<%= stPoint.number_point_intro%> "

                            />
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary mb-3">
                                Xác nhận
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
